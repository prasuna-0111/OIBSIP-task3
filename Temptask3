<body>
    <div class="converter">
        <h2>Temperature Converter</h2>
        <input type="text" id="temperatureInput" placeholder="Enter temperature">
        <select id="unitSelect">
            <option value="C">Celsius</option>
            <option value="F">Fahrenheit</option>
            <option value="K">Kelvin</option>
        </select>
        <button onclick="convertTemperature()">Convert</button>
        <div class="result" id="result"></div>
    </div>
    
    <script>
        function convertTemperature() {
            const tempInput = document.getElementById('temperatureInput').value;
            const unit = document.getElementById('unitSelect').value;
            const resultDiv = document.getElementById('result');
            
            // Validate input
            if (isNaN(tempInput) || tempInput === '') {
                resultDiv.textContent = 'Please enter a valid number';
                return;
            }
            
            const temperature = parseFloat(tempInput);
            let convertedTemp = 0;
            let targetUnit = '';

            if (unit === 'C') {
                convertedTemp = (temperature * 9/5) + 32;
                targetUnit = 'Fahrenheit';
                convertedTempK = temperature + 273.15;
                targetUnitK = 'Kelvin';
                resultDiv.innerHTML = Converted Temperature: ${convertedTemp.toFixed(2)} 째F <br> Converted Temperature: ${convertedTempK.toFixed(2)} K;
            } else if (unit === 'F') {
                convertedTemp = (temperature - 32) * 5/9;
                targetUnit = 'Celsius';
                convertedTempK = (temperature - 32) * 5/9 + 273.15;
                targetUnitK = 'Kelvin';
                resultDiv.innerHTML = Converted Temperature: ${convertedTemp.toFixed(2)} 째C <br> Converted Temperature: ${convertedTempK.toFixed(2)} K;
            } else if (unit === 'K') {
                convertedTemp = temperature - 273.15;
                targetUnit = 'Celsius';
                convertedTempF = (temperature - 273.15) * 9/5 + 32;
                targetUnitF = 'Fahrenheit';
                resultDiv.innerHTML = Converted Temperature: ${convertedTemp.toFixed(2)} 째C <br> Converted Temperature: ${convertedTempF.toFixed(2)} 째F;
            }
        }
    </script>
</body>
</html>
